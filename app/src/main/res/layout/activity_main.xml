<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#000000"
    >

    <TextView
        android:id="@+id/textViewX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:text="X: "
        android:textColor="#FFFFFF"
        />

    <TextView
        android:id="@+id/textViewY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewX"
        android:layout_marginStart="10dp"
        android:textColor="#FFFFFF"
        android:text="Y: "/>

    <TextView
        android:id="@+id/textViewZ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewY"
        android:layout_marginStart="10dp"
        android:textColor="#FFFFFF"
        android:text="Y: "/>

    <TextView
        android:id="@+id/textViewLight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewZ"
        android:layout_marginStart="10dp"
        android:textColor="#FFFFFF"
        android:text="Light: "/>

    <TextView
        android:id="@+id/textViewDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewLight"
        android:layout_marginStart="10dp"
        android:textColor="#FFFFFF"
        android:text="Distance: "/>

    <TextView
        android:id="@+id/textViewDonut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textSize="16sp"
        android:fontFamily="@font/consolas"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:text="Пончик" />

</RelativeLayout>